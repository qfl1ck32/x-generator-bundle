{
  "name": "api",
  "description": "Backend microservices generated with X-Framework by Kaviar",
  "version": "1.0.0",
  "private": true,
  "main": "dist/startup/index.js",
  "scripts": {
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "start": "npm run compile; tsc -w --preserveWatchOutput & nodemon -q -w dist dist/startup/index.js",
    "start:watch:debug": "nodemon --watch 'dist' dist/startup/index.js --inspect",
    "watch": "tsc -w",
    "pretest": "npm run compile",
    "lint": "eslint './src/**/*.ts'",
    "lint:fix": "eslint './src/**/*.ts' --fix",
    "test": "jest --verbose dist/__tests__/index.js",
    "test:clean": "jest --clearCache",
    "test:watch": "jest --verbose --watch dist/__tests__/index.js",
    "testonly": "npm test",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "prepublishOnly": "npm run compile",
    "generate:docs": "typedoc ./src/startup/index.ts --exclude ./src/__tests__ --out typeDocs --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@babel/runtime": "7.12.5",
    "@kaviar/apollo-bundle": "^1.1.2",
    "@kaviar/apollo-security-bundle": "^1.0.1",
    "@kaviar/core": "^1.1.1",
    "@kaviar/ejson": "^1.2.2",
    "@kaviar/email-bundle": "^1.0.2",
    "@kaviar/graphql-bundle": "^1.0.1",
    "@kaviar/logger-bundle": "^1.0.0",
    "@kaviar/mongo-bundle": "^1.0.4",
    "@kaviar/nova": "^1.3.2",
    "@kaviar/password-bundle": "^1.0.0",
    "@kaviar/security-bundle": "^1.0.1",
    "@kaviar/security-mongo-bundle": "^1.0.2",
    "@kaviar/validator-bundle": "^1.0.0",
    "@kaviar/x-bundle": "^1.3.0",
    "@kaviar/x-password-bundle": "^1.0.4",
    "class-transformer": "^0.3.1",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-upload": "^11.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "yup": "^0.29.2"
  },
  "devDependencies": {
    "@types/graphql": "^0.11.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.43",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "^26.0.0",
    "jest-junit": "^10.0.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.13",
    "typescript": "^4.1.0"
  },
  "kaviar": {
    "type": "microservice"
  }
}
