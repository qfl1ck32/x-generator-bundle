{
  "name": "api",
  "description": "Microservice generated with X by Kaviar",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "compile": "tsc",
    "start": "node dist/startup/index.js",
    "watch": "tsc -w",
    "pretest": "npm run compile",
    "test": "jest --verbose dist/__tests__/index.js",
    "test:clean": "jest --clearCache",
    "test:watch": "jest --verbose --watch dist/__tests__/index.js",
    "testonly": "npm test",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "prepublishOnly": "npm run compile",
    "generate:docs": "typedoc ./src/startup/index.ts --exclude ./src/__tests__ --out typeDocs --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@kaviar/apollo-bundle": "^1.0.0",
    "@kaviar/core": "^1.0.0",
    "@kaviar/loader": "^1.0.0",
    "@kaviar/logger-bundle": "^1.0.0",
    "@kaviar/mongo-bundle": "^1.0.0",
    "@kaviar/x-bundle": "^1.0.0",
    "@kaviar/validator": "^1.0.0",
    "@kaviar/nova": "^1.2.0",
    "@kaviar/executor": "^1.0.0",
    "@kaviar/security-bundle": "^1.0.0",
    "@kaviar/security-mongo-bundle": "^1.0.0",
    "@kaviar/email-bundle": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/graphql": "^0.11.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.43",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "^26.0.0",
    "jest-junit": "^10.0.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.10.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.8.3"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "x": {
    "type": "microservice"
  }
}
